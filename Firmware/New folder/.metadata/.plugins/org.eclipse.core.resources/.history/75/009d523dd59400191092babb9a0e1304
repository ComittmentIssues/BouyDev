uint8_t parse_GSA(char* GGA_string)
{
	/* Isolate Dilation of Precisions*/
	uint8_t count = 0;
	while(count < 2)
	{
		if(*GGA_string++==',')count++;
	}
	diag.fix_type = (*GGA_string-48);
	//field 3 - 15 indicate satelites
	char* comma = strpbrk(GGA_string,",");
	char* t = strtok(GGA_string,",");
	uint8_t numsats = 0;
	uint8_t numfields = 0;
	while(numfields < 12)
	{

		if((int)(comma - t) > 1)
		{
			numsats++;
		}
		t = strtok(NULL,",");
	}
	diag.num_sats = numsats;
	DOP_t dop[3];
	char* temp = strtok(++GGA_string,".");
	for (int i = 0; i < 3; ++i)
	{
		//get digit

		dop[i].digit = atoi(temp);
		temp = strtok(NULL,",");
		dop[i].precision = atoi(temp);
		temp = strtok(NULL,".");

	}
	/*
	 * If successful, add to diagnostic struct
	 *
	 */
diag.HDOP = dop[0];
diag.PDOP = dop[1];
diag.VDOP = dop[2];
	return 0;
}

#ifndef DS18B20_H_
#define DS18B20_H_

#include "stm32f4xx.h"

#define OneWire_Port GPIOD
#define OneWire_Pin GPIO_Pin
#define RCC_OneWirePeriph RCC_AHB1Periph_GPIOD

#define SWI_FLOAT GPIO_WriteBit(OneWire_struct,OneWire_Pin,SET);
#define SWI_LOW	  GPIO_WriteBit(OneWire_struct,OneWire_Pin,RESET);

/* DWT Timer*/
uint32_t DWT_Delay_init();

__STATIC_INLINE void DWT_delay_us(uint32_t us)
{
	/* Get Clock frequency*/
	RCC_ClocksTypeDef rcc;

	/* Get number of cycles*/
	uint32_t cycle_start = DWT->CYCCNT;
	/* Get number of ticks*/
	uint32_t multiplier = SystemCoreClock/1000000;
	us *= multiplier;
	/* Delay*/
	while((DWT->CYCCNT - cycle_start) < us);
}

#endif /* DS18B20_H_ */

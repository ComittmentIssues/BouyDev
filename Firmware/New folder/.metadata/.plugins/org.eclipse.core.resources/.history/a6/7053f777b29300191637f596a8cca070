/*
 * checks if the data is valid
 * Criteria: 1 - acceptable msg
 * Criteria: 2 - valid checksum
 */
uint8_t is_valid(char* nmeamsg)
{
	nmeamsg++; //remve start token
	char* msg = strtok(nmeamsg,",");
	msg+=2;
	if(strcmp(msg,"GLL") != 0)
	{
		return 1;
	}else if (strcmp(msg,"GSA") != 0)
	{
		return 1;
	}else if(strcmp(msg,"GMP") != 0)
	{
		return 1;
	}

	/* check sum */
	uint16_t checksum = 0;
	while(*nmeamsg != '*')
	{
		checksum^= *nmeamsg;
		nmeamsg++;
	}
	uint8_t h = *nmeamsg++;
	uint8_t l = *nmeamsg++;
	uint16_t checkbyte = (h<<8)|l;
	if(!(checksum == checkbyte))
	{
		return 1;
	}

	return 0;
}
/*
 * Flag keeps track of successful coordinate retrievals
 */

uint8_t parse_zda(char* ZDAstring)
{
	time_t t;
	struct tm *timepointer;

	t = time(NULL);
	timepointer = localtime(&t);
	/* Get UTC time*/
	while(*ZDAstring++ != ',');
	char* temp = ZDAstring++;
	for (int i = 0; i < strlen(ZDAstring); ++i)
	{
		if ((ZDAstring[i]==',')&&(ZDAstring[i+1] == ','))
		{
			/* Data is invalid*/
			return -1;
		}
	}
	timepointer->tm_hour = (temp[0]-48)*10+ (temp[1]-48);
	timepointer->tm_min = (temp[2]-48)*10+ (temp[3]-48);
	timepointer->tm_sec = (temp[4]-48)*10+ (temp[5]-48);
	while(*ZDAstring++ != ',');
	temp = ZDAstring;
	timepointer->tm_mon = (temp[0]-48)*10+ (temp[1]-48);
	timepointer->tm_mday = (temp[3]-48)*10+ (temp[4]-48);
	timepointer->tm_year = (temp[6]-48)*1000 +(temp[7]-48)*100 + (temp[8]-48)*10 +(temp[9]-48);
	time_t result;

	 result = mktime(timepointer);
	 eTime =  result;
	return 0;
}
